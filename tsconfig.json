{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ESNext"
    ]
  },
  "baseUrl": "./",
  "paths": {
    "@env/*": [
      "src/environment/*"
    ] // Adjust the path to match your project structure
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "index.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}