{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ESNext"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "index.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}